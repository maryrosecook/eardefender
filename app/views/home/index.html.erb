<div class="page_content_holder">
	
	<!-- show username form -->
	<% if !@point_in_week_suggestions && !@seqencing_suggestions %>
		<% form_tag do -%>
			<span class="last_fm_username_form_label">Last.fm username</span><br/>
			<input class="text_field" id="username" name="username" type="text" value="<%= @username %>"/>
			<%= submit_tag "Go", :class => 'submit_button', :onclick => "Element.show('time_warning');" %>
		<% end-%>
		<br/>
		<div id="time_warning" style="display:none;">
			First time will take 30 secs.
		</div>
		
	<!-- show listening suggestions -->
	<% else %>
		<% if (@point_in_week_suggestions && @point_in_week_suggestions.length > 0) || (@seqencing_suggestions && @seqencing_suggestions.length > 0) %>
			<%= render(:partial => 'suggestions', :locals => { :suggestions => @point_in_week_suggestions, :albums_by_artist => @point_in_week_albums_by_artist } ) %>
			<br/>
			<%= render(:partial => 'suggestions', :locals => { :suggestions => @seqencing_suggestions, :albums_by_artist => @sequencing_albums_by_artist } ) %>
			<!-- Latest: <%#= @latest_scrobble.artist %> -->
		<% else %>
			No suggestions.<br/>
		<% end-%>
	<% end-%>
	
	<br/><br/><br/><br/>	
</div><br/>