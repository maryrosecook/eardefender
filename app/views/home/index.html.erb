<div class="page_content_holder">
	
	<!-- show username form -->
	<% if !@most_popular %>
		<br/>
		<% form_tag do -%>
		<span class="last_fm_username_form_label">Last.fm username</span><br/>
			<input class="text_field" name="username" type="text" value="<%= @username %>"/>
			<%= submit_tag "Go", :class => 'submit_button' %>
		<% end-%>
		<br/>
		
	<!-- show listening suggestions -->
	<% else %>
		<% if @most_popular && @most_popular.length > 0 %>
			<% for most_popular_key in @most_popular.keys.sort { |x,y| @most_popular[y]["count"] <=> @most_popular[x]["count"] } %>
				<strong><%= @most_popular[most_popular_key]["artist"] %></strong>,
				<%= most_popular_key %><br/>
			<% end-%>
		<% else %>
			Either you don't exist, or you haven't listened to much music.<br/>
		<% end-%>
	<% end-%>
	
	<br/><br/><br/><br/>
	
</div><br/>